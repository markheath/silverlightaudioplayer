<Canvas xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' 
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' 
        xmlns:uicontrol='clr-namespace:Silverlight.Samples.Controls;assembly=ClientBin/Silverlight.Samples.Controls.dll'
        Width='300' Height='15'
        MouseLeftButtonDown='OnPage'
        MouseEnter='OnMouseEnter'
        MouseLeave='OnMouseLeave'>
  <!-- required - the track of the scrollbar-->
  <uicontrol:ScrollBarTrack x:Name='track'/>
  <!-- The slider track inside - controls the movement of the thumb -->
  <Rectangle Width='280' Height='15' x:Name='sliderTrack' Canvas.Left="10">
  </Rectangle>
  <!-- required -->
  <uicontrol:GripThumb x:Name='thumb' MinimumSize='20'/>
  <!-- required  - left repeat button -->
  <uicontrol:RepeatButton x:Name='left' Click='OnClickUp' />
  <!-- required - right repeat button -->
  <uicontrol:RepeatButton x:Name='right' Click='OnClickDown' />
</Canvas>

