<Canvas xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' 
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' 
        xmlns:uicontrol='clr-namespace:Silverlight.Samples.Controls;assembly=ClientBin/Silverlight.Samples.Controls.dll'
        Width='700' Height='480' Background='FloralWhite' 
        Clip='F1 M 0,0 700,0 700,480 0,480'
        >
  <!-- not required - corner element -->
  <Rectangle Fill='WhiteSmoke' Width='15' Height='15' x:Name='corner'/>
  <!-- not required - horizontal scrollbar - will be placed at the bottom -->
  <uicontrol:ScrollBar x:Name='horizontal' ScrollChanged='OnHorizontalScroll' />
  <!-- not required - vertical scrollbar - will be placed on the right -->
  <uicontrol:ScrollBar x:Name='vertical' ScrollChanged='OnVerticalScroll' />
</Canvas>

