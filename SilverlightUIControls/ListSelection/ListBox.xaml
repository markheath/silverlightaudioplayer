<Canvas xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' 
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' 
        xmlns:uicontrol='clr-namespace:Silverlight.Samples.Controls;assembly=ClientBin/Silverlight.Samples.Controls.dll'
        Width='350' Height='450'  
        Clip='F1 M 0,0 350,0 350,450 0,450'
        MouseLeftButtonDown='OnMouseLeftButtonDown'
        MouseLeftButtonUp='OnMouseLeftButtonUp'>
  <!-- background of the listbox -->
  <Canvas.Background>
    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
      <GradientStop Color="#FFE2F5F9" Offset="0"/>
      <GradientStop Color="#FFFFFFFF" Offset="1"/>
    </LinearGradientBrush>
  </Canvas.Background>

  <!-- made visible if there are too many items in the list box -->
  <uicontrol:ScrollBar x:Name='scrollbar' Size='450' ViewportSize='450'  
                  ScrollChanged='OnScrollChanged' Canvas.Left ='200' />
  <!-- the frame -->
  <Rectangle x:Name="background" Stroke="#FF817C77" Width="350" Height="450" />

</Canvas>

