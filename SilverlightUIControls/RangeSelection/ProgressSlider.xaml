<Canvas xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' 
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' 
        xmlns:uicontrol='clr-namespace:Silverlight.Samples.Controls;assembly=ClientBin/Silverlight.Samples.Controls.dll'
        Width='200'
        Height='20'
        >
  
  <Rectangle 
    x:Name="downloadProgressRectangle" 
    Fill="Blue" 
    Opacity="0.2" 
    Canvas.Left="5" 
    Canvas.Top="5" 
    RadiusX="3" 
    RadiusY="3" 
    Width="100" 
    Height="10" />

  
  <Rectangle 
    x:Name="positionBarRectangle" 
    Stroke="Black" 
    StrokeThickness="3" 
    Canvas.Left="5" 
    Canvas.Top="5" 
    RadiusX="3" 
    RadiusY="3" 
    Width="190" 
    Height="10" />
  
  <!-- The thumb element must have name "thumb" -->
  <uicontrol:ProgressThumb 
    x:Name="thumb" 
    Canvas.Left="0"
    Canvas.Top="0"
    DragStart="OnDragStart" 
    DragDelta="OnDragDelta" />

  
  
</Canvas>

