<Canvas xmlns='http://schemas.microsoft.com/winfx/2006/xaml/presentation' 
        xmlns:x='http://schemas.microsoft.com/winfx/2006/xaml' 
        Width='17' 
        Height='11' 
        MouseMove='OnMouseMove'
        >
  <Canvas.Resources>
    <!--
    <Storyboard x:Name="pulse" BeginTime="0" Completed="PulseStoryboardCompleted">
      <ColorAnimationUsingKeyFrames Storyboard.TargetName="jewelFill" Storyboard.TargetProperty="Color" Duration="00:00:02">
        <LinearColorKeyFrame Value="Yellow" KeyTime="0:0:0" />
        <LinearColorKeyFrame Value="Red" KeyTime="0:0:1" />
        <LinearColorKeyFrame Value="Yellow" KeyTime="0:0:2" />
      </ColorAnimationUsingKeyFrames>
    </Storyboard>-->
  </Canvas.Resources>

  <Rectangle x:Name="jewel"
             Canvas.Left="0"
             Canvas.Top="0"
             RadiusX="3" RadiusY="3"
             Width="17" Height="11" Opacity="0.6">
    <Rectangle.Fill>
      <SolidColorBrush x:Name="jewelFill" Color="Gray" />
    </Rectangle.Fill>
  </Rectangle>

  
  <!-- outline for the thumb, the thumb should be centered on the slider track 
  <Rectangle x:Name="outline" Fill="#FFE4F1FB" StrokeMiterLimit="1.000000" StrokeThickness="1.000000" RadiusX="5.5" RadiusY="5.5" Width="17" Height="11" Canvas.Left="0" Canvas.Top="0"/>-->

</Canvas>
